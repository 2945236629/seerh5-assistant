{
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "Node",
        "target": "ES2022",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "allowUmdGlobalAccess": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "baseUrl": ".",
        "composite": true,
        "paths": {
            "@sa-app/*": [
                "./packages/app/src/*"
            ],
            "@mui/styled-engine": [
                "node_modules/@mui/styled-engine-sc"
            ],
        }
    },
    "include": [],
    "references": [
        {
            "path": "packages/app"
        },
        {
            "path": "packages/core"
        }
    ]
}