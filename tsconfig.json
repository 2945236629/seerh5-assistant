{
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "Node",
        "target": "ES2022",
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "outDir": "./dist/",
        "declaration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "allowJs": true,
        "allowUmdGlobalAccess": true,
        "paths": {
            "@data": [
                "src/data/index.js"
            ],
            "@sa-core": [
                "src/assistant/index"
            ],
            "@sa-core/*": [
                "src/assistant/*"
            ],
            "@sa-app/*": [
                "src/app/*"
            ],
            "@mui/styled-engine": [
                "./node_modules/@mui/styled-engine-sc"
            ],
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "entry",
        "./src/data",
        "archive"
    ],
    "include": [
        "./src/**/*"
    ],
}