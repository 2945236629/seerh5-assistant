{
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "Node",
        "target": "ES2022",
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "rootDir": "src",
        "outDir": "./dist/",
        "declaration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "allowJs": true,
        "allowUmdGlobalAccess": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist",
        "entry",
        "archive"
    ],
    "include": [
        "./src/"
    ],
}