{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "nodenext",
        "lib": [
            "esnext",
            "dom"
        ],
        "allowUmdGlobalAccess": true,
        "resolveJsonModule": true,
        "checkJs": true,
        "noEmit": true
    },
    "include": [
        "suites/**/*",
        "env/**/*",
        "../../../types",
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}