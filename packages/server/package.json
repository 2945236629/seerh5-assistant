{
  "name": "@sea/server",
  "private": true,
  "type": "module",
  "version": "0.7.0",
  "main": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/router/index.ts"
    }
  },
  "scripts": {
    "start": "nodemon ./src/index.ts",
    "build": "esbuild ./src/index.ts --bundle --platform=node --target=node20.11.1 --outfile=./src/index.cjs --allow-overwrite --external:thread-stream",
    "executable": "pkg ./src/index.cjs -c package.json -o ./bin/server.exe",
    "watch:tsc": "tsc -w"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.3.0",
    "@fastify/middie": "^8.3.0",
    "@fastify/one-line-logger": "^1.3.0",
    "@fastify/static": "^7.0.3",
    "@fastify/websocket": "^10.0.1",
    "@trpc/server": "npm:@trpc/server@next",
    "close-with-grace": "^1.3.0",
    "fastify": "^4.26.2",
    "http-proxy-middleware": "3.0.0-beta.1",
    "rotating-file-stream": "^3.2.1",
    "superjson": "^2.2.1",
    "zod": "^3.22.5"
  },
  "devDependencies": {
    "@swc/core": "^1.4.16",
    "@types/connect": "^3.4.38",
    "@yao-pkg/pkg": "^5.11.5",
    "esbuild": "0.20.1",
    "nodemon": "^3.1.0",
    "pino-pretty": "^10.3.1",
    "ts-node": "^10.9.2"
  },
  "nodemonConfig": {
    "watch": [
      "./tsconfig.json",
      "./src/**/*",
      ".env"
    ],
    "ext": "ts,js",
    "execMap": {
      "ts": "node --import=./typescript-hooks.mjs"
    }
  },
  "pkg": {
    "scripts": [
      "../../node_modules/thread-stream/lib/**/*.js",
      "../../node_modules/thread-stream/index.js"
    ],
    "targets": [
      "node20-win-x64"
    ]
  }
}
