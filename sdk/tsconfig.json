{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "target": "es2022",
        "outDir": "./dist",
        "skipLibCheck": true,
        "noEmit": true,
        "strict": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "sea-core/types/seerh5",
            "sea-core/types/egret"
        ]
    },
    "include": [
        "./src",
        "lib/mod.d.ts"
    ]
}