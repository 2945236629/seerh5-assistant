{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client", "@sea/core/types/seerh5", "@sea/core/types/egret", "@sea/mod-type/core-extended"],
    "paths": {
      "@/*": ["./mods/*"]
    }
  },
  "include": ["mods"]
}
